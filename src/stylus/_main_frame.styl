main
  height: 100%
  width: calc(100% - 400px)
  position: absolute
  right: 0
  overflow-y: scroll
  overflow-x: hidden

#mainContainer
  width: 860px
  margin-top: 72px
  margin-left: auto
  margin-right: auto

.project
  overflow: hidden
  margin-bottom: 196px

header
  margin-bottom: 96px
  overflow: hidden

.projectTitle
  font-size: 32px
  line-height: 40px
  font-weight: lighter
  white-space: nowrap
  text-transform: uppercase

  &::after
    content: ' '
    position: absolute
    height: 34px
    width: 2px
    margin-left: 16px
    margin-right: 16px

.projectDesc
  margin-left: 34px
  font-size: 16px
  line-height: 24px
  letter-spacing: 0.5px

.showcase
  position: relative
  overflow: hidden
  height: 469px

.projectYear
  position: absolute
  top: 2px
  font-size: 24px
  font-weight: bold
  opacity: 0.5

.imageFrame
  position: absolute
  right: 0

.imageWrapper
  position: absolute
  margin-top: 33px
  width: 720px
  height: 400px
  overflow: hidden
  background-color: #333

.imageWrapper > img
  width: 720px
  position: relative
  transition: transform .4s cubic-bezier(0.4, 0, 0.2, 1), opacity .4s cubic-bezier(0.4, 0, 0.2, 1)

  &:hover
    transform: scale(1.05)
    opacity: .6
